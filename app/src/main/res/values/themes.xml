<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Laurum" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wlu_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/wlu_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wlu_gold</item>
        <item name="colorSecondaryVariant">@color/wlu_purple</item>
        <item name="colorOnSecondary">@color/wlu_gold</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorAccent">@color/wlu_purple</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:navigationBarColor">@color/wlu_purple</item>
    </style>

    <style name="Theme.LaurumDark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wlu_gold</item>
        <item name="colorPrimaryVariant">@color/wlu_gold</item>
        <item name="colorOnPrimary">@color/wlu_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wlu_gold</item>
        <item name="colorSecondaryVariant">@color/wlu_gold</item>
        <item name="colorOnSecondary">@color/wlu_gold</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/wlu_gold</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/wlu_gold</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorTertiary">@color/teal_700</item>
        <item name="android:textColorPrimaryInverse">@color/teal_700</item>
        <item name="android:textColorSecondaryInverse">@color/teal_700</item>
        <item name="android:textColorTertiaryInverse">@color/teal_700</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:titleTextColor">#295055</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:colorBackgroundFloating">@color/black</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="colorControlNormal">@color/wlu_gold</item>
        <item name="android:strokeColor">@color/wlu_gold</item>
        <item name="itemTextColor">@color/wlu_gold</item>
        <item name="itemIconTint">@color/wlu_gold</item>
        <item name="colorButtonNormal">@color/wlu_gold</item>
        <item name="android:colorMode">@color/wlu_gold</item>
        <item name="android:textColorHint">@color/wlu_gold</item>
        <item name="colorOnSurface">@color/wlu_gold</item>
        <item name="backgroundOverlayColorAlpha">@color/wlu_gold</item>
        <item name="actionMenuTextColor">@color/wlu_gold</item>
        <item name="android:textColorPrimaryNoDisable">@color/wlu_gold</item>
        <item name="itemTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/wlu_purple</item>
    </style>

    <style name="CalendarViewTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/wlu_purple</item>
        <item name="android:unfocusedMonthDateColor">@color/wlu_gold</item>
        <item name="android:selectedDateVerticalBar">@color/white</item>
        <item name="android:weekSeparatorLineColor">@color/purple_200</item>
        <item name="android:dayOfWeekBackground">@color/wlu_gold</item>
        <item name="android:showWeekNumber">false</item>
        <item name="android:weekNumberColor">@color/purple_200</item>
        <item name="android:selectedWeekBackgroundColor">@color/white</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.AppCompat.Widget.PopupMenu.Large</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="PreferenceTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorAccent">@color/wlu_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>



