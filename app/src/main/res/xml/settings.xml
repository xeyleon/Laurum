<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Appearance">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="theme_preference"
            android:summary="(Under Construction)"
            android:title="Dark Theme" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Degree Tracker Settings">

        <EditTextPreference
            android:key="@string/starting_credits_key"
            android:title="Starting Credits"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:defaultValue="0"
            android:summary=""
            android:dialogTitle="Enter Starting Credits Amount" />

        <EditTextPreference
            android:key="@string/required_credits_key"
            android:title="Total Required Credits"
            android:dialogTitle="Enter Total Required Credits Amount"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:summary=""
            android:defaultValue="20" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Search Settings">

        <ListPreference
            android:key="@string/course_search_key"
            android:title="Course Search"
            android:summary="Course search criteria"
            android:dialogTitle="Course Search"
            android:entries="@array/course_search_entries"
            android:defaultValue="1"
            android:entryValues="@array/course_search_values" />

        <ListPreference
            android:key="@string/faculty_search_key"
            android:title="Faculty Search"
            android:summary="Faculty search criteria"
            android:dialogTitle="Faculty Search"
            android:entries="@array/faculty_search_entries"
            android:defaultValue="1"
            android:entryValues="@array/faculty_search_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="App Details">
        <Preference
            android:key="user_manual"
            android:summary="(Under Construction)"
            android:title="User Manual">
        </Preference>
        <Preference
            android:summary="View Repository"
            android:title="GitHub">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://github.com/" />
        </Preference>
        <Preference
            android:key="developer_info"
            android:textAllCaps="true"
            android:summary="Group 11"
            android:title="Developer">
        </Preference>
        <Preference
            android:key="version_info"
            android:summary="0.0.1"
            android:title="Version"/>
    </PreferenceCategory>

</PreferenceScreen>