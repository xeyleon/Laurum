<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Appearance">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="theme_preference"
            android:title="Dark Theme" />

        <EditTextPreference
            android:key="edittext_preference"
            android:title="EDITME"
            android:summary="HEHE"
            android:dialogTitle="HEHE"
            android:dependency="theme_preference" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Search Settings">

        <ListPreference
            android:key="@string/settings_test_key"
            android:title="WII"
            android:dialogTitle="AFAS"
            android:entries="@array/reply_entries"
            android:defaultValue="popular"
            android:entryValues="@array/reply_entries" />

    </PreferenceCategory>

    <PreferenceCategory
        android:textColor="@color/wlu_purple"
        android:title="App Details">
        <Preference
            android:key="settings_about"
            android:textAllCaps="true"
            android:title="About Developer">
        </Preference>
        <Preference
            android:title="Version: 0.0.1"/>
        <Preference
            android:title="GitHub">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://github.com/" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>