<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Appearance">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="theme_preference"
            android:title="Dark Theme" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Search Settings">

        <ListPreference
            android:key="@string/course_search_key"
            android:title="Course Search"
            android:summary="Course search criteria"
            android:dialogTitle="Course Search"
            android:entries="@array/course_search_entries"
            android:defaultValue="1"
            android:entryValues="@array/course_search_values" />

        <ListPreference
            android:key="@string/faculty_search_key"
            android:title="Faculty Search"
            android:summary="Faculty search criteria"
            android:dialogTitle="Faculty Search"
            android:entries="@array/faculty_search_entries"
            android:defaultValue="1"
            android:entryValues="@array/faculty_search_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="App Details">
        <Preference
            android:key="developer_info"
            android:textAllCaps="true"
            android:summary="Group 11"
            android:title="Developer">
        </Preference>
        <Preference
            android:key="version_info"
            android:summary="0.0.1"
            android:title="Version"/>
        <Preference
            android:title="GitHub">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://github.com/" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>